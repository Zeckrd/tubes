#ifndef PVZ_H_INCLUDED
#define PVZ_H_INCLUDED

#include <iostream>

using namespace std;

typedef struct ParentPlant *ParPlant;
typedef struct ChildPlant *ChiPlant;
typedef struct ParentZombie *ParZombie;
typedef struct ChildZombie *ChiZombie;

struct ChildPlant{
    string namaStats;
    int Stats;
};

struct ParentPlant{
    string Name;
    ChiPlant stats;
    int AttRange;
    ParPlant next;
};

struct ChildZombie{
    string namaStats;
    int Stats;
};

struct ParentZombie{
    char Name;
    ChildZombie* stats;
    int AttRange;
    ParentZombie next;
};



#endif // PVZ_H_INCLUDED
